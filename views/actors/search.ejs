<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/actors/search" method='POST'>
        <h1>Busca el actor que quieras</h1>
        <input type="text" placeholder="Buscar actores" name='search'>
        <button type='submit'>Buscar</button>
    </form>
    <% if(typeof(actors)!= 'undefined'){ %> 
        <ul>
            <% actors.forEach(element => { %>
                <li><%= element.first_name %> <%= element.last_name %> </li>
            <% }) %>
        </ul>
    <% } %> 
</body>
</html>